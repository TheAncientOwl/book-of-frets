{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lyrics Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "0.1.0"
    },
    "lyrics": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "[LC].*"
        }
      }
    }
  },
  "required": ["version", "lyrics"]
}
