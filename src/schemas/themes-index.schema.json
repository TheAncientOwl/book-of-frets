{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Themes Index Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "index": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "directory": { "type": "string" },
          "mainColor": { "type": "string" }
        },
        "required": ["title", "directory", "mainColor"]
      }
    }
  },
  "required": ["version", "index"]
}
